{
  "manifest_version": 2,
  "name": "Кнопка «Искать в Яндекс» на страницах Google™",
  "version": "1.4.3",

  "icons": {
    "128": "img/icon128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://www.google.am/*",
        "*://www.google.az/*",
        "*://www.google.by/*",
        "*://www.google.com.ua/*",
        "*://www.google.com/*",
        "*://www.google.ee/*",
        "*://www.google.fi/*",
        "*://www.google.ge/*",
        "*://www.google.kg/*",
        "*://www.google.kz/*",
        "*://www.google.lt/*",
        "*://www.google.lv/*",
        "*://www.google.md/*",
        "*://www.google.ru/*",
        "*://www.google.tm/*",
        "*://www.google.tr/*",
        "*://www.google.uz/*"
      ],
      "js": ["js/add_button.js"],
      "run_at": "document_end"
    }
  ]
}
